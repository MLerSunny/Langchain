# Security settings - REQUIRED
JWT_SECRET=CHANGE_ME_IN_PRODUCTION

# Vector DB settings
DATA_PATH=data/raw
CHROMA_PATH=.chroma

# Model settings
MODEL_NAME=deepseek-llm:7b

# Server settings
FASTAPI_PORT=8000
VLLM_PORT=8001
HOST=0.0.0.0

# LLM API settings
OLLAMA_BASE_URL=http://localhost:11434

# Chunking settings
CHUNK_SIZE=256
CHUNK_OVERLAP=32

# Document embedding settings
EMBEDDING_MODEL=all-MiniLM-L6-v2

# JWT Settings
JWT_ALGORITHM=HS256

# Model settings
CONTEXT_WINDOW=8192
MAX_TOKENS=2048
TEMPERATURE=0.1

# Vector database settings
CHROMA_PERSIST_DIRECTORY=/app/data/chroma
EMBEDDING_DIMENSION=384

# RAG settings
RAG_CONFIG_PATH=config/rag.yaml

# Model optimization settings
MODEL_OPTIMIZATION_CONFIG_PATH=config/model_optimization.yaml

# Fine-tuning settings
TRAINING_DATASET_PATH=/app/data/training
EVAL_DATASET_PATH=/app/data/eval
OUTPUT_DIR=/app/data/models
LEARNING_RATE=0.00002
BATCH_SIZE=1
GRADIENT_ACCUMULATION_STEPS=4
NUM_EPOCHS=3
MAX_STEPS=-1
LOGGING_STEPS=10
SAVE_STEPS=100
WARMUP_STEPS=50

# Gunicorn settings
GUNICORN_WORKERS=4
GUNICORN_WORKER_CLASS=uvicorn.workers.UvicornWorker
GUNICORN_TIMEOUT=120
GUNICORN_KEEPALIVE=5
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=50
GUNICORN_ACCESS_LOG=-
GUNICORN_ERROR_LOG=-
GUNICORN_LOG_LEVEL=info
GUNICORN_RELOAD=false
GUNICORN_CAPTURE_OUTPUT=true 